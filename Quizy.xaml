<UserControl x:Class="QuziLab.Quizy"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuziLab"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="602">

    <UserControl.Resources>
        <local:NullToBoolConverter x:Key="NullToBoolConverter"/>
    </UserControl.Resources>

    <Grid Background="#F5F6FF">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Twoje Quizy" Style="{StaticResource PageTitle}" Margin="40,30,0,10"/>

        <Border Grid.Row="1" Margin="40,10" CornerRadius="6" BorderThickness="0">
            <ListBox x:Name="QuizListBox" 
                     Style="{StaticResource ModernListBox}" 
                     ItemsSource="{Binding LoadedQuizzes}" 
                     ItemContainerStyle="{StaticResource ModernListBoxItem}"
                     SelectionMode="Single"
                     AlternationCount="2">

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Title}" FontSize="14" VerticalAlignment="Center" />
                                <TextBlock Text="{Binding QuestionsCount, StringFormat='({0} pytań)'}" 
                                           Margin="10,0" FontSize="14" VerticalAlignment="Center"
                                           Opacity="0.7"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button x:Name="NaukaBT" Content="Nauka" Style="{StaticResource RoundedButtonStyle}" Margin="0,0,10,0" Width="80" Click="NaukaBT_Click"/>
                                <Button x:Name="TestBT" Content="Test" Click="Test_Click"  Style="{StaticResource RoundedButtonStyle}" Width="80" />
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="40,10,40,30">
            <Button x:Name="DeleteBT" Content="Usuń" 
                    Style="{StaticResource RoundedButtonStyle}" 
                    
                    Margin="0,0,10,0"
                    IsEnabled="{Binding SelectedItem, ElementName=QuizListBox, Converter={StaticResource NullToBoolConverter}}" Click="DeleteBT_Click"/>

            <Button Content="Edytuj" 
                    Style="{StaticResource RoundedButtonStyle}" 
                    
                    Margin="0,0,10,0"
                    IsEnabled="{Binding SelectedItem, ElementName=QuizListBox, Converter={StaticResource NullToBoolConverter}}"/>

            <Button Content="Nowy Quiz" 
                    Style="{StaticResource RoundedButtonStyle}"
                    Click="NowyQuiz_Click" />
        </StackPanel>
    </Grid>
</UserControl>