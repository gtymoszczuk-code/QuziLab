<UserControl x:Class="QuziLab.Start"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuziLab"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="600">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Image Source="/img/logo-image.png" Height="150" Width="112" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,20"/>
            <TextBlock Text="Witaj w Quizlab!" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Button 
                Content="Rozwiąż test" 
                Click="BtnGoToQuizy_Click"
                Style="{StaticResource ctaButton}" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Margin="0,20,0,10"/>
        </StackPanel>
    </Grid>
</UserControl>
