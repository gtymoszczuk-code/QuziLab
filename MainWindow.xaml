<Window x:Class="QuziLab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuziLab"
        mc:Ignorable="d"
        Title="QuizLab - generator quizów" Height="550" Width="800" FontSize="18">
    <Grid x:Name="main_Grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#180C6D" Padding="0">
            <DockPanel LastChildFill="True">
                <Image x:Name="logo" Height="91" Width="70" DockPanel.Dock="Top" Source="/Quizlab-logo-dark.png" StretchDirection="DownOnly" Margin="0,30,0,0"/>
                <StackPanel VerticalAlignment="Center" Margin="0,-100,0,0">
                    <RadioButton 
                        Name="BtnStart"
                        Content="Start" 
                        Style="{StaticResource menuButtonStyle}" 
                        GroupName="MenuButtons" 
                        IsChecked="True" 
                        Click="BtnStart_Click"/>

                    <RadioButton
                        Name="BtnQuizy"
                        Content="Quizy" 
                        Style="{StaticResource menuButtonStyle}" 
                        GroupName="MenuButtons" 
                        Click="BtnQuizy_Click"/>

                    <RadioButton 
                        Name="BtnWyniki"
                        Content="Wyniki" 
                        Style="{StaticResource menuButtonStyle}" 
                        GroupName="MenuButtons" 
                        Click="BtnWyniki_Click"/>

                    <RadioButton
                        Name="BtnAbout"
                        Content="O aplikacji" 
                        Style="{StaticResource menuButtonStyle}" 
                        GroupName="MenuButtons" 
                        Click="BtnAbout_Click"/>
                </StackPanel>
            </DockPanel>
        </Border>
        <Grid Grid.Column="1">
            <ContentControl x:Name="contentControl" Foreground="#453F73" Background="#EEEEFF"/>

            <Grid x:Name="CustomMessageBoxOverlay" Visibility="Collapsed" Panel.ZIndex="1000">
                <Border Background="#22000000" MouseDown="Block_Click" />

                <Border Style="{StaticResource MessageBoxBorderStyle}" 
                    Width="450" Height="250" 
                    VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Grid Margin="30">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock x:Name="MessageBoxText" 
                               TextWrapping="Wrap" 
                               TextAlignment="Center" 
                               VerticalAlignment="Center" 
                               FontSize="16" Foreground="#333"/>

                        <Button Grid.Row="1" 
                            Content="Kontynuuj" 
                            Style="{StaticResource ctaSButton}" 
                            HorizontalAlignment="Center" 
                            Width="160"
                            Click="CloseMessageBox_Click"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>


    </Grid>
</Window>
