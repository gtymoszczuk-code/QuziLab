<UserControl x:Class="QuziLab.PodsumowanieTestu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuziLab"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="600">
    <Grid Background="#F5F6FF">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="40,30,40,10">
            <TextBlock x:Name="QuizTitle" Text="Tytuł Quizu" Style="{StaticResource PageTitle}" Margin="0"/>
            <TextBlock x:Name="FinalTime" Text="Czas: 20:00" 
                       HorizontalAlignment="Right" VerticalAlignment="Center" 
                       Foreground="#453F73" FontSize="18"/>
        </Grid>

        <Grid Grid.Row="1" VerticalAlignment="Center" Margin="40,0">
            <StackPanel HorizontalAlignment="Left">
                <TextBlock Text="Wynik:" Foreground="#453F73" Margin="0,0,0,10" FontSize="16"/>

                <Border Style="{StaticResource SettingsBoxStyle}" Width="520" HorizontalAlignment="Left">
                    <StackPanel>
                        <TextBlock x:Name="ScoreText" Text="19/20 pkt. (95%)" 
                                   FontSize="18" Foreground="#453F73" Margin="0,0,0,5"/>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Ocena: " FontSize="18" Foreground="#453F73"/>
                            <TextBlock x:Name="GradeText" Text="Bardzo-dobry" 
                                       FontSize="18" FontWeight="Bold" Foreground="#FF69B4"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2" Margin="40,0,40,30">
            <Button Content="Zakończ" Style="{StaticResource LinkButton}" 
        HorizontalAlignment="Left" VerticalAlignment="Center" Click="FinishBtn_Click"/>
            <Button Content="Powtórz test" 
                    Style="{StaticResource RoundedButtonStyle}" 
                    HorizontalAlignment="Right" 
                    Width="140" Height="40" Click="RestartTest_Click"/>
        </Grid>
    </Grid>
</UserControl>
