<UserControl x:Class="QuziLab.StworzQuiz"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuziLab"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="600">
    <Grid Background="#F5F6FF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            
        </Grid.ColumnDefinitions>

        <StackPanel Margin="40">
            <TextBlock Text="Stwórz Nowy Quiz" Style="{StaticResource PageTitle}" Margin="0,0,0,20"/>

            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Nazwa:" VerticalAlignment="Center" Foreground="#333"/>
                <TextBox Grid.Column="1" Style="{StaticResource ModernTextBox}" x:Name="QuizTitleInput"/>
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Lista pytań:" VerticalAlignment="Top" Margin="0,0,0,0" Foreground="#333"/>

                <StackPanel Grid.Column="1" >
                    <ListBox x:Name="QuestionsListBox" Height="200" Style="{StaticResource ModernListBox}" ItemsSource="{Binding Questions}" DisplayMemberPath="Content">
                   
                    </ListBox>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button x:Name="EditBt" Content="Edytuj" Style="{StaticResource RoundedButtonStyle}"  IsEnabled="{Binding SelectedItem, ElementName=QuestionsListBox, Converter={StaticResource NullToBoolConverter}}"  Width="100" Click="EditBT_Click"/>
                        <Button x:Name="DeleteBT" Content="Usuń" Style="{StaticResource RoundedButtonStyle}" IsEnabled="{Binding SelectedItem, ElementName=QuestionsListBox, Converter={StaticResource NullToBoolConverter}}" Width="100" Margin="10,0" Click="DeleteBT_Click"/>
                        <Button Content="Dodaj pytanie" Click="DodajPytanie_Click" Style="{StaticResource RoundedButtonStyle}" />
                    </StackPanel>
                </StackPanel>
            </Grid>

            <Grid Margin="0,20,0,0">
                <Button Content="wróć" x:Name="BackBtn" Style="{StaticResource LinkButton}" HorizontalAlignment="Left" VerticalAlignment="Center" Click="BackBtn_Click"/>
                <Button x:Name="SaveQuiz" Content="Stwórz Quiz" Style="{StaticResource RoundedButtonStyle}" HorizontalAlignment="Right" Width="140" Click="SaveQuiz_Click" />
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
